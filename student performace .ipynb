from tkinter import *
from tkinter import messagebox
import pandas as pd
import matplotlib.pyplot as plt
from matplotlib.backends.backend_tkagg import FigureCanvasTkAgg

# Data
departments = []
average_marks = []
students = []

# Functions
def add_data():
    dept = dept_entry.get()
    marks = marks_entry.get()
    stud = stud_entry.get()
    
    if dept == "" or marks == "" or stud == "":
        messagebox.showwarning("Input Error", "Please fill all fields!")
        return
    try:
        departments.append(dept)
        average_marks.append(float(marks))
        students.append(int(stud))
        messagebox.showinfo("Success", f"Added: {dept}, Marks: {marks}, Students: {stud}")
        dept_entry.delete(0, END)
        marks_entry.delete(0, END)
        stud_entry.delete(0, END)
    except ValueError:
        messagebox.showerror("Invalid Input", "Please enter valid numbers for marks and students!")

def show_data():
    if not departments:
        messagebox.showwarning("No Data", "Please enter data first!")
        return
    df = pd.DataFrame({
        "Department": departments,
        "Average Marks": average_marks,
        "Students": students
    })
    messagebox.showinfo("Student Data", str(df))

def show_all_graphs():
    if not departments:
        messagebox.showwarning("No Data", "Please enter data first!")
        return
    
    # Clear old plots if any
    for widget in chart_frame.winfo_children():
        widget.destroy()
    
    # Create a figure with 3 charts
    fig, axs = plt.subplots(1, 3, figsize=(10, 3))
    fig.suptitle("Student Performance Visualization", fontsize=12, fontweight='bold')

    # Bar Chart 
    axs[0].bar(departments, average_marks, color=['skyblue', 'lightgreen', 'lightcoral', 'plum', 'khaki'])
    axs[0].set_title("Average Marks by Department")
    axs[0].set_xlabel("Department")
    axs[0].set_ylabel("Marks")
    axs[0].tick_params(axis='x', rotation=30)

    # Pie Chart 
    axs[1].pie(
        students,
        labels=departments,
        autopct=lambda p: f'{p:.1f}%',
        colors=['skyblue', 'lightgreen', 'lightcoral', 'plum', 'khaki'],
        startangle=90
    )
    axs[1].set_title("Student Distribution")

    #  Scatter Chart
    axs[2].scatter(average_marks, students, color='orange', s=70, edgecolors='black')
    axs[2].set_title("Marks vs Students")
    axs[2].set_xlabel("Average Marks")
    axs[2].set_ylabel("Students")

    # Adjust layout for cleaner fit
    fig.tight_layout(rect=[0, 0, 1, 0.95])

    # Embed figure in Tkinter frame
    canvas = FigureCanvasTkAgg(fig, master=chart_frame)
    canvas.draw()
    canvas.get_tk_widget().pack(fill=BOTH, expand=True)

def about():
    messagebox.showinfo("About Project",
        "CIA-4 Project\nStudent Performance Visualization\nCreated by [Your Name]\nUsing Tkinter, NumPy, Pandas, and Matplotlib")

#  Tkinter Window
window = Tk()
window.title("Student Performance Dashboard")
window.geometry("950x600")

Label(window, text="Student Performance Dashboard", font=("Arial", 15, "bold")).pack(pady=10)

# Input Frame
input_frame = Frame(window)
input_frame.pack(pady=5)

Label(input_frame, text="Department:").grid(row=0, column=0, padx=5, pady=2)
dept_entry = Entry(input_frame, width=25)
dept_entry.grid(row=0, column=1, pady=2)

Label(input_frame, text="Average Marks:").grid(row=1, column=0, padx=5, pady=2)
marks_entry = Entry(input_frame, width=25)
marks_entry.grid(row=1, column=1, pady=2)

Label(input_frame, text="Students:").grid(row=2, column=0, padx=5, pady=2)
stud_entry = Entry(input_frame, width=25)
stud_entry.grid(row=2, column=1, pady=2)

# Buttons
Button(window, text="Add Data", width=25, bg="lightyellow", command=add_data).pack(pady=5)
Button(window, text="Show Student Data", width=25, bg="lightgray", command=show_data).pack(pady=5)
Button(window, text="Show All Graphs", width=25, bg="lightblue", command=show_all_graphs).pack(pady=5)
Button(window, text="About", width=25, bg="khaki", command=about).pack(pady=5)

# Frame for displaying charts
chart_frame = Frame(window, bd=2, relief=RIDGE, bg="white")
chart_frame.pack(fill=BOTH, expand=True, padx=10, pady=10)

window.mainloop()

